---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "FreeAgents | Empowering Entrepreneurs with Powerful Software",
  description = "FreeAgents provides powerful software tools to help entrepreneurs streamline their workflows, scale their businesses, and make data-driven decisions."
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-inter text-gray-100 bg-teal-900 overflow-x-hidden w-full max-w-[100vw]">
    <slot />

    <script>
      // Simple animation on scroll function
      document.addEventListener('DOMContentLoaded', () => {
        const animatedElements = document.querySelectorAll('.animate-on-scroll');
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('animate-fade-up');
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.1 });
        
        animatedElements.forEach(element => {
          observer.observe(element);
        });
      });
    </script>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer components {
    .animate-fade-up {
      @apply opacity-0 translate-y-5 animate-[fadeUp_0.6s_ease-out_forwards];
    }
    
    .neon-text {
      @apply bg-gradient-to-r from-cyan-400 to-cyan-300 bg-clip-text text-transparent;
    }

    .btn {
      @apply inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-md transition-all duration-300 whitespace-nowrap;
    }

    .btn-primary {
      @apply bg-cyan-400 text-teal-900 hover:bg-cyan-300 hover:shadow-neon-sm hover:shadow-cyan-400/50 hover:-translate-y-0.5;
    }

    .btn-secondary {
      @apply bg-transparent text-cyan-400 border-2 border-cyan-400 hover:bg-cyan-400/10 hover:shadow-neon-sm hover:shadow-cyan-400/50 hover:-translate-y-0.5;
    }

    .btn-lg {
      @apply px-8 py-4 text-lg;
    }

    .container {
      @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
    }

    .section {
      @apply py-16 relative overflow-hidden;
    }
  }

  @keyframes fadeUp {
    from { 
      opacity: 0;
      transform: translateY(20px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>