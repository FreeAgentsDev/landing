---
import { translations, defaultLang } from '../i18n/translations';
const lang = (Astro.cookies.get('lang')?.value || defaultLang) as 'en' | 'es';
const t = translations[lang];
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <span class="neon-text">FreeAgents</span>
        </a>
        <p class="footer-tagline">{t['footer.tagline']}</p>
        <div class="social-links">
          <a href="#" aria-label="Twitter"><i class="icon-twitter"></i></a>
          <a href="#" aria-label="LinkedIn"><i class="icon-linkedin"></i></a>
          <a href="#" aria-label="Instagram"><i class="icon-instagram"></i></a>
        </div>
      </div>
      
      <div class="footer-nav">
        <h4>{t['footer.product']}</h4>
        <ul>
          <li><a href="#features">{t['nav.features']}</a></li>
          <li><a href="#pricing">{t['nav.pricing']}</a></li>
          <li><a href="#">{t['footer.roadmap']}</a></li>
          <li><a href="#">{t['footer.changelog']}</a></li>
        </ul>
      </div>
      
      <div class="footer-nav">
        <h4>{t['footer.resources']}</h4>
        <ul>
          <li><a href="#">{t['footer.blog']}</a></li>
          <li><a href="#">{t['footer.documentation']}</a></li>
          <li><a href="#">{t['footer.community']}</a></li>
          <li><a href="#">{t['footer.support']}</a></li>
        </ul>
      </div>
      
      <div class="footer-nav">
        <h4>{t['footer.company']}</h4>
        <ul>
          <li><a href="#">{t['footer.about']}</a></li>
          <li><a href="#">{t['footer.careers']}</a></li>
          <li><a href="#">{t['footer.press']}</a></li>
          <li><a href="#">{t['footer.contact']}</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">{t['footer.copyright'].replace('{year}', currentYear.toString())}</p>
      <div class="legal-links">
        <a href="#">{t['footer.terms']}</a>
        <a href="#">{t['footer.privacy']}</a>
        <a href="#">{t['footer.cookies']}</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-teal-800);
    padding: var(--spacing-16) 0 var(--spacing-8);
    margin-top: var(--spacing-16);
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
    margin-bottom: var(--spacing-12);
  }
  
  .footer-brand {
    margin-bottom: var(--spacing-6);
  }
  
  .footer-logo {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-2);
    display: inline-block;
  }
  
  .footer-tagline {
    color: var(--color-gray-300);
    margin-bottom: var(--spacing-4);
  }
  
  .social-links {
    display: flex;
    gap: var(--spacing-4);
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: var(--border-radius-full);
    background-color: var(--color-teal-700);
    color: var(--color-primary);
    transition: all 0.3s ease;
  }
  
  .social-links a:hover {
    background-color: var(--color-primary);
    color: var(--color-teal-900);
    box-shadow: var(--glow-accent);
  }
  
  .footer-nav h4 {
    color: var(--color-gray-100);
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-4);
  }
  
  .footer-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-nav li {
    margin-bottom: var(--spacing-2);
  }
  
  .footer-nav a {
    color: var(--color-gray-300);
    transition: color 0.3s ease;
  }
  
  .footer-nav a:hover {
    color: var(--color-primary);
  }
  
  .footer-bottom {
    padding-top: var(--spacing-6);
    border-top: 1px solid var(--color-teal-700);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .copyright {
    color: var(--color-gray-400);
    margin-bottom: var(--spacing-4);
  }
  
  .legal-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-4);
    justify-content: center;
  }
  
  .legal-links a {
    color: var(--color-gray-400);
    font-size: var(--font-size-sm);
  }
  
  .legal-links a:hover {
    color: var(--color-primary);
  }
  
  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
    
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
    
    .copyright {
      margin-bottom: 0;
    }
  }
  
  /* Icons */
  .icon-twitter::before {
    content: "ùïè";
    font-size: 18px;
  }
  
  .icon-linkedin::before {
    content: "in";
    font-weight: bold;
  }
  
  .icon-instagram::before {
    content: "üì∑";
    font-size: 16px;
  }
</style>