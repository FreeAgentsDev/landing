---
import { translations, defaultLang } from '../i18n/translations';
import LanguageSwitch from './LanguageSwitch.astro';

const lang = (Astro.cookies.get('lang')?.value || defaultLang) as 'en' | 'es';
const t = translations[lang];
---

<header class="site-header">
  <div class="container">
    <div class="header-content">
      <a href="/" class="logo" aria-label="FreeAgents Home">
        <img src="/images/freeagents-logo.png" alt="FreeAgents" width="140" height="40" />
      </a>
      <nav class="main-nav" aria-label="Main navigation">
        <ul>
          <li><a href="#benefits">{t['nav.benefits']}</a></li>
          <li><a href="#features">{t['nav.features']}</a></li>
          <li><a href="#pricing">{t['nav.pricing']}</a></li>
          <li><a href="#testimonials">{t['nav.testimonials']}</a></li>
          <li><a href="#cta" class="btn btn-secondary">{t['nav.getStarted']}</a></li>
        </ul>
      </nav>
      <div class="header-actions">
        <LanguageSwitch />
        <button class="menu-toggle" aria-label="Toggle menu" tabindex="0">
          <span class="hamburger"></span>
        </button>
      </div>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: clamp(0.5rem, 2vw, 1.5rem) 0;
    background-color: rgba(10, 49, 65, 0.92);
    backdrop-filter: blur(10px);
    transition: background-color 0.3s, padding 0.3s, box-shadow 0.3s, transform 0.7s cubic-bezier(.4,2,.6,1);
    box-shadow: 0 2px 16px rgba(0,0,0,0.07);
    animation: headerFadeIn 1.1s cubic-bezier(.4,2,.6,1);
  }
  .site-header.scrolled {
    box-shadow: 0 6px 32px 0 rgba(0,255,255,0.13), 0 2px 16px rgba(0,0,0,0.13);
    background-color: rgba(10, 49, 65, 0.98);
    transform: translateY(-2px) scale(1.01);
  }
  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    min-height: 56px;
    gap: 1rem;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.2rem;
  }
  .logo img {
    width: 120px;
    height: auto;
    margin-right: 0.5rem;
    transition: transform 0.3s;
    vertical-align: middle;
  }
  .logo:hover img {
    transform: scale(1.07) rotate(-2deg);
  }
  .main-nav ul {
    display: none;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
    background: none;
  }
  .main-nav li {
    margin: 0;
  }
  .main-nav a {
    color: var(--color-gray-100);
    font-weight: 500;
    font-size: 1.08rem;
    letter-spacing: -0.01em;
    transition: color 0.2s, text-shadow 0.2s;
    border-radius: 6px;
    padding: 0.3em 0.7em;
    outline: none;
  }
  .main-nav a:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    background: rgba(0,255,255,0.08);
  }
  .main-nav a:hover {
    color: var(--color-primary);
    text-shadow: var(--text-glow-accent);
    background: rgba(0,255,255,0.06);
  }
  .btn.btn-secondary {
    border: 1.5px solid var(--color-primary);
    background: transparent;
    color: var(--color-primary);
    font-weight: 600;
    border-radius: 8px;
    padding: 0.4em 1em; /* Ligeramente reducido el padding horizontal */
    margin-left: 0.5em;
    transition: background 0.2s, color 0.2s, box-shadow 0.2s;
  }
  .btn.btn-secondary:hover, .btn.btn-secondary:focus {
    background: var(--color-primary);
    color: var(--color-teal-900);
    box-shadow: 0 2px 16px rgba(0,255,255,0.13);
  }
  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .header-actions > *:not(:last-child) {
    margin-right: 0.5rem;
  }
  .header-actions .language-switch {
    transform: scale(0.85);
    margin-right: 0.2rem;
  }
  .menu-toggle {
    display: block;
    background: var(--color-teal-900);
    border: 2px solid var(--color-primary);
    cursor: pointer;
    padding: 0.5em;
    border-radius: 50%;
    transition: background 0.2s, border-color 0.2s, box-shadow 0.2s;
    outline: none;
    width: 44px;
    height: 44px;
    position: relative;
    box-shadow: 0 2px 12px rgba(0,255,255,0.07);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .menu-toggle:focus {
    outline: 2px solid var(--color-primary);
    background: rgba(0,255,255,0.08);
    border-color: var(--color-primary);
  }
  .menu-toggle:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    box-shadow: 0 4px 24px rgba(0,255,255,0.13);
  }
  .hamburger {
    width: 28px;
    height: 3px;
    background-color: var(--color-primary);
    border-radius: 2px;
    position: relative;
    transition: background 0.3s, transform 0.3s;
    display: block;
  }
  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    width: 28px;
    height: 3px;
    background-color: var(--color-primary);
    border-radius: 2px;
    transition: transform 0.3s, background 0.3s;
  }
  .hamburger::before { top: -9px; }
  .hamburger::after { bottom: -9px; }
  .menu-toggle.open .hamburger {
    background: transparent;
  }
  .menu-toggle.open .hamburger::before {
    transform: translateY(9px) rotate(45deg);
    background: var(--color-primary);
  }
  .menu-toggle.open .hamburger::after {
    transform: translateY(-9px) rotate(-45deg);
    background: var(--color-primary);
  }
  .menu-toggle.open {
    background: var(--color-primary);
    border-color: var(--color-primary);
    box-shadow: 0 4px 24px rgba(0,255,255,0.13);
  }
  @media (min-width: 768px) {
    .menu-toggle { display: none; }
    .main-nav ul {
      display: flex !important;
      align-items: center;
      position: static !important;
      background: none !important;
      padding: 0 !important;
      width: auto !important;
      box-shadow: none !important;
    }
  }
  @media (max-width: 767px) {
    .main-nav ul {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      width: 100%;
      background: rgba(10,49,65,0.98);
      box-shadow: 0 8px 32px rgba(0,0,0,0.18);
      flex-direction: column;
      align-items: flex-start;
      padding: 1.5rem 1.2rem 1.2rem 1.2rem;
      gap: 1.2rem;
      border-radius: 0 0 18px 18px;
      z-index: 200;
      animation: menuFadeIn 0.3s;
    }
    .main-nav ul.open {
      display: flex !important;
    }
    .header-content {
      min-height: 44px; /* Reducido para un header más compacto */
    }
    .logo img {
      width: 110px;
    }
    .header-actions {
      gap: 0.2rem;
    }
    .btn.btn-secondary {
      padding: 0.35em 0.8em; /* Ajuste específico para móviles */
      font-size: 0.95rem; /* Opcional: reducir un poco la fuente del botón */
    }
  }
  @keyframes menuFadeIn {
    from { opacity: 0; transform: translateY(-16px); }
    to { opacity: 1; transform: none; }
  }
  @keyframes headerFadeIn {
    from { opacity: 0; transform: translateY(-32px); }
    to { opacity: 1; transform: none; }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.querySelector('.menu-toggle');
    const mainNav = document.querySelector('.main-nav ul');
    const header = document.querySelector('.site-header');
    if (!menuToggle || !mainNav || !header) return;
    // Toggle menu
    menuToggle.addEventListener('click', () => {
      mainNav.classList.toggle('open');
      menuToggle.classList.toggle('open');
    });
    // Close menu on click outside or on nav link click
    document.addEventListener('click', (e) => {
      const target = e.target;
      if (!(target instanceof Node)) return;

      // If click is on a nav link inside the open menu
      if (mainNav.classList.contains('open') && mainNav.contains(target) && target.closest('a')) {
        mainNav.classList.remove('open');
        menuToggle.classList.remove('open');
        return; 
      }
      // If click is outside menu and toggle button
      if (!mainNav.contains(target) && !menuToggle.contains(target) && mainNav.classList.contains('open')) {
        mainNav.classList.remove('open');
        menuToggle.classList.remove('open');
      }
    });
    // Close menu on resize
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768) {
        mainNav.classList.remove('open');
        menuToggle.classList.remove('open');
      }
    });
    // Keyboard accessibility
    menuToggle.addEventListener('keydown', (e) => {
      if (!(e instanceof KeyboardEvent)) return;
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        mainNav.classList.toggle('open');
        menuToggle.classList.toggle('open');
      }
    });
    // Header shadow on scroll
    window.addEventListener('scroll', () => {
      if (window.scrollY > 8) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
  });
</script>