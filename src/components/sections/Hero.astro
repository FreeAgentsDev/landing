---
import { translations, defaultLang } from '../../i18n/translations';
const lang = (Astro.cookies.get('lang')?.value || defaultLang) as 'en' | 'es';
const t = translations[lang];
---

<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text animate-on-scroll">
        <h1 class="hero-title">
          {t['hero.title']} <span class="neon-text">{t['hero.titleHighlight']}</span>
        </h1>
        <p class="hero-subtitle">
          {t['hero.subtitle']}
        </p>
        <div class="hero-buttons">
          <a href="#pricing" class="btn btn-primary btn-lg animate-pulse">{t['hero.cta.start']}</a>
          <a href="#features" class="btn btn-secondary btn-lg">{t['hero.cta.explore']}</a>
        </div>
      </div>
      <div class="hero-image animate-on-scroll">
        <img src="/images/elon1.png" alt="Elon Musk" style="max-width: 100%; height: auto; border-radius: 16px; box-shadow: 0 4px 32px rgba(0,0,0,0.25);" />
      </div>
    </div>
  </div>
  <div class="hero-background"></div>
</section>

<style>
  :root {
    /* Altura del header en desktop: 56px (min-height) + 2 * 0.5rem (padding) = ~72px si 1rem=16px */
    --header-height-desktop: 72px; 
  }
  @media (max-width: 767px) {
    :root {
      /* Altura del header en móvil: 44px (min-height) + 2 * 0.5rem (padding) = ~60px si 1rem=16px */
      --header-height-mobile: 60px;
    }
  }
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding-top: var(--header-height-desktop);
    padding-bottom: clamp(1rem, 4vw, 4rem);
  }
  
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 1.2rem;
    padding-right: 1.2rem;
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(2rem, 6vw, 4rem);
    position: relative;
    z-index: 2;
  }
  
  .hero-text {
    max-width: 600px;
    animation: fadeInUp 1s both;
  }
  
  .hero-title {
    font-size: clamp(2.2rem, 6vw, 4.5rem);
    margin-bottom: var(--spacing-6);
    line-height: 1.1;
    font-weight: 800;
    letter-spacing: -0.02em;
  }
  
  .hero-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.5rem);
    color: var(--color-gray-200);
    margin-bottom: var(--spacing-8);
    line-height: 1.5;
    animation: fadeIn 1.2s both;
  }
  
  .hero-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-4);
    margin-top: 1.5rem;
  }
  
  .hero-buttons a {
    min-width: 44px;
    min-height: 44px;
    font-size: 1.1rem;
    transition: transform 0.2s, box-shadow 0.2s;
    will-change: transform;
  }
  
  .hero-buttons a:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
  
  .hero-buttons a:hover {
    transform: translateY(-2px) scale(1.04);
    box-shadow: 0 4px 24px rgba(0,255,255,0.15);
  }
  
  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeIn 1.5s both;
  }
  
  .hero-image img {
    max-width: 100%;
    height: auto;
    border-radius: 16px;
    box-shadow: 0 4px 32px rgba(0,0,0,0.25);
    transition: transform 0.3s cubic-bezier(.4,2,.6,1), box-shadow 0.3s;
    will-change: transform;
  }
  
  .hero-image img:hover {
    transform: scale(1.03) rotate(-1deg);
    box-shadow: 0 8px 48px rgba(0,255,255,0.18);
  }
  
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 20% 30%, var(--color-teal-800) 0%, transparent 50%), radial-gradient(circle at 80% 70%, var(--color-teal-700) 0%, transparent 50%);
    z-index: 1;
    opacity: 0.6;
    animation: bgMove 12s linear infinite alternate;
  }
  
  @media (min-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr 1fr;
      align-items: center;
    }
    .hero-image img {
      max-width: 420px;
    }
    .hero-section {
      padding-top: var(--header-height-desktop); /* Asegura que se use el valor correcto */
    }
  }
  
  @media (max-width: 480px) {
    .hero-title {
      font-size: 2rem;
    }
    .hero-buttons {
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media (max-width: 767px) { /* Aplicar la altura de header móvil */
    .hero-section {
      padding-top: var(--header-height-mobile);
    }
  }
  
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: none; }
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes bgMove {
    0% { background-position: 20% 30%, 80% 70%; }
    100% { background-position: 30% 40%, 70% 60%; }
  }
</style>