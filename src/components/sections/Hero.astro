---
import { translations, defaultLang } from '../../i18n/translations';
const lang = (Astro.cookies.get('lang')?.value || defaultLang) as 'en' | 'es';
const t = translations[lang];
---

<section class="relative min-h-screen flex items-center overflow-hidden pt-[72px] md:pt-[72px] pb-4 md:pb-16">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16 relative z-10">
      <div class="max-w-2xl animate-[fadeInUp_1s_both]">
        <h1 class="text-[2.2rem] md:text-[4.5rem] mb-6 leading-tight font-extrabold tracking-tight">
          {t['hero.title']} <span class="neon-text">{t['hero.titleHighlight']}</span>
        </h1>
        <p class="text-lg md:text-2xl text-gray-200 mb-8 leading-relaxed animate-[fadeIn_1.2s_both]">
          {t['hero.subtitle']}
        </p>
        <div class="flex flex-wrap gap-4 mt-6">
          <a href="#pricing" class="btn btn-primary btn-lg animate-pulse-slow">{t['hero.cta.start']}</a>
          <a href="#features" class="btn btn-secondary btn-lg">{t['hero.cta.explore']}</a>
        </div>
      </div>
      <div class="flex justify-center items-center animate-[fadeIn_1.5s_both]">
        <img 
          src="/images/elon1.png" 
          alt="Elon Musk" 
          class="max-w-full md:max-w-[420px] h-auto rounded-2xl shadow-2xl transition-all duration-300 hover:scale-103 hover:-rotate-1 hover:shadow-cyan-400/20"
        />
      </div>
    </div>
  </div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_30%,theme(colors.teal.800)_0%,transparent_50%),radial-gradient(circle_at_80%_70%,theme(colors.teal.700)_0%,transparent_50%)] opacity-60 z-0 animate-[bgMove_12s_linear_infinite_alternate]"></div>
</section>

<style>
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: none; }
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes bgMove {
    0% { background-position: 20% 30%, 80% 70%; }
    100% { background-position: 30% 40%, 70% 60%; }
  }
</style>