---
import { translations, defaultLang } from '../../i18n/translations';
const lang = (Astro.cookies.get('lang')?.value || defaultLang) as 'en' | 'es';
const t = translations[lang];
---

<section id="benefits" class="section benefits-section">
  <div class="container">
    <div class="section-header text-center animate-on-scroll">
      <h2 class="section-title">{t['benefits.title']} <span class="neon-text">{t['benefits.titleHighlight']}</span></h2>
      <p class="section-subtitle">{t['benefits.subtitle']}</p>
    </div>
    
    <div class="benefits-grid grid-4">
      <div class="benefit-card card animate-on-scroll">
        <div class="benefit-icon">
          <div class="icon-circle">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
        <h3 class="benefit-title">{t['benefits.bespokeTitle']}</h3>
        <p class="benefit-description">{t['benefits.bespokeDesc']}</p>
      </div>
      
      <div class="benefit-card card animate-on-scroll">
        <div class="benefit-icon">
          <div class="icon-circle">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M2 3H8C9.06087 3 10.0783 3.42143 10.8284 4.17157C11.5786 4.92172 12 5.93913 12 7V21C12 20.2044 11.6839 19.4413 11.1213 18.8787C10.5587 18.3161 9.79565 18 9 18H2V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M22 3H16C14.9391 3 13.9217 3.42143 13.1716 4.17157C12.4214 4.92172 12 5.93913 12 7V21C12 20.2044 12.3161 19.4413 12.8787 18.8787C13.4413 18.3161 14.2044 18 15 18H22V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
        <h3 class="benefit-title">{t['benefits.flexibleTitle']}</h3>
        <p class="benefit-description">{t['benefits.flexibleDesc']}</p>
      </div>
      
      <div class="benefit-card card animate-on-scroll">
        <div class="benefit-icon">
          <div class="icon-circle">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 16V8C20.9996 7.64927 20.9071 7.30481 20.7315 7.00116C20.556 6.69752 20.3037 6.44536 20 6.27L13 2.27C12.696 2.09446 12.3511 2.00205 12 2.00205C11.6489 2.00205 11.304 2.09446 11 2.27L4 6.27C3.69626 6.44536 3.44398 6.69752 3.26846 7.00116C3.09294 7.30481 3.00036 7.64927 3 8V16C3.00036 16.3507 3.09294 16.6952 3.26846 16.9988C3.44398 17.3025 3.69626 17.5546 4 17.73L11 21.73C11.304 21.9055 11.6489 21.9979 12 21.9979C12.3511 21.9979 12.696 21.9055 13 21.73L20 17.73C20.3037 17.5546 20.556 17.3025 20.7315 16.9988C20.9071 16.6952 20.9996 16.3507 21 16Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M3.27 6.96L12 12.01L20.73 6.96" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 22.08V12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
        <h3 class="benefit-title">{t['benefits.aiTitle']}</h3>
        <p class="benefit-description">{t['benefits.aiDesc']}</p>
      </div>
      
      <div class="benefit-card card animate-on-scroll">
        <div class="benefit-icon">
          <div class="icon-circle">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 16V12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 8H12.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
        <h3 class="benefit-title">{t['benefits.scalabilityTitle']}</h3>
        <p class="benefit-description">{t['benefits.scalabilityDesc']}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .benefits-section {
    background-color: var(--color-teal-900);
    position: relative;
    overflow: hidden;
  }
  
  .benefits-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 0% 50%, var(--color-teal-800) 0%, transparent 30%),
      radial-gradient(circle at 100% 50%, var(--color-teal-800) 0%, transparent 30%);
    opacity: 0.4;
    z-index: 0;
  }
  
  .section-header {
    position: relative;
    z-index: 1;
    margin-bottom: var(--spacing-12);
  }
  
  .section-title {
    margin-bottom: var(--spacing-4);
  }
  
  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-gray-300);
    max-width: 700px;
    margin: 0 auto;
  }
  
  .benefits-grid {
    position: relative;
    z-index: 1;
  }
  
  .benefit-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--spacing-8);
  }
  
  .benefit-icon {
    margin-bottom: var(--spacing-4);
  }
  
  .icon-circle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background-color: var(--color-teal-700);
    color: var(--color-primary);
    transition: all 0.3s ease;
  }
  
  .benefit-card:hover .icon-circle {
    background-color: var(--color-primary);
    color: var(--color-teal-900);
    box-shadow: var(--glow-accent);
    transform: scale(1.1);
  }
  
  .benefit-title {
    margin-bottom: var(--spacing-4);
    color: var(--color-primary);
  }
  
  .benefit-description {
    color: var(--color-gray-300);
    line-height: 1.6;
  }
  
  @media (min-width: 768px) {
    .benefits-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-6);
    }
  }
  
  @media (min-width: 1024px) {
    .benefits-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>